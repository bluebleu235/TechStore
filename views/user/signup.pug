doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  // <meta http-equiv="X-UA-Compatible" content="ie=edge">
  title TechStore | Sign up
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
  link(rel='stylesheet', href='/styles/app.css')
  link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css')
  link(rel="shortcut icon", type="image/x-icon", href="/images/logo.png")
.container
  .main
    // Section: Design Block
    section.text-center
      // Background image
      .p-5.bg-image(style="      background-image: url('https://img.wallpapic.com/i4258-129-113/thumb/abstract-lights-red-orange-wallpaper.jpg');      height: 300px; width:1000px;      ")
      // Background image
      .card.mx-4.mx-md-5.shadow-5-strong(style='      margin-top: -100px;      background: hsla(0, 0%, 100%, 0.8);      backdrop-filter: blur(30px);      ')
        .card-body.py-5.px-md-5
          .row.d-flex.justify-content-center
            .col-lg-7
              form#form.form(action='/user/api/signup', method='POST', enctype="multipart/form-data")
                h3.heading.title &Dstrok;&abreve;ng K&yacute;
                p.desc H&#x1EA1;nh ph&uacute;c kh&ocirc;ng n&#x1EB1;m &#x1EDF; ti&#x1EC1;n b&#x1EA1;c, m&agrave; &#x1EDF; vi&#x1EC7;c mua s&#x1EAF;m
                .form-control
                  input#username(autocomplete='off', name='user', type='text', placeholder='Tên Đăng Nhập')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                  if errors
                    if errors.username
                      p#error #{errors.username}
                .form-control
                  input#email(autocomplete='off', name='email', type='text', placeholder='Địa chỉ Email')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                  if errors
                    if errors.username
                      p#error #{errors.email}
                .form-control
                  input#password(autocomplete='off', name='pass', type='password', placeholder='Mật Khẩu')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                  if errors
                    if errors.username
                      p#error #{errors.password}
                .form-control
                  input#password2(autocomplete='off', name='pass2', placeholder='Xác Nhận Mật Khẩu', type='password')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                  if errors
                    if errors.username
                      p#error #{errors.password}
                .form-group
                  input#avatar.form-control-file(name='avatar', type='file')
                button Submit
script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
