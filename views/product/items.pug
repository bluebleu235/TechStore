html
    head 
        meta(charset='UTF-8')
        title TechStore | Product
        link(rel="stylesheet",
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css",
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T",
        crossorigin="anonymous")
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href="/styles/product-styles.css")
        link(rel="stylesheet", href="/styles/home-styles.css")
        link(rel="shortcut icon", type="image/x-icon", href="/images/logo.png")
    body
      nav.flex-div
        a.nav-left(href='/')
          img.logo-web(src='./images/logo.png', alt='')
        .nav-middle.flex-div
          form(action="/product/items/search", method='GET').search-box.flex-div
            input(type='text', name='q', placeholder='Tìm kiếm sản phẩm')
            button
              img.search-icon(src='./images/search.svg.png', alt='')
        if !user
          .nav-right.flex-div
            button.login-button
              a(href='/user/login') Đăng Nhập
            button.signup-button 
              a(href='/user/signup') Đăng Ký
        else
          .flex-div
            a#cart(href='/cart/' + user.username)
              img#cart-icon(src='/images/cart.png')
            a#username(href='/user/' + user.username)
              img#avatar(src='/' + user.avatar)
      .product 
        .small-container
          h2.product-title Danh Sách Các Sản Phẩm
          a(href='/product/items/sort')
            button Sắp xếp theo giá
          .flex-container
            if products
              each product in products
                .flex-items 
                  img(src=product.image)
                  h6.name-items=product.name
                  p=`Giá bán: ${product.price}đ`
                  a(href="/cart/add/" + product.name).btn Mua ngay


